<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/alarm_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="Alarm"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_toLeftOf="@+id/alarm_item_toggle_button"
        android:layout_toStartOf="@+id/alarm_item_toggle_button"
        android:layout_alignBottom="@+id/alarm_item_toggle_button"
        android:layout_alignTop="@+id/alarm_item_toggle_button" />

    <ToggleButton
        android:id="@+id/alarm_item_toggle_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:focusable="false"
        android:clickable="false" />
</RelativeLayout>